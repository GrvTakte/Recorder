<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" AUDIO"
        android:textColor="#fff"
        android:textSize="25dp"
        android:id="@+id/audio_text"
        android:background="@drawable/background_card_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear_layout_one"
        android:background="@drawable/background_card_footer"
        android:layout_below="@+id/audio_text"
        android:gravity="center">

    <Button
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:text=""
        android:id="@+id/start"
        android:onClick="playAudio"
        android:background="@drawable/button_red_enable"
        />

    <Button
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_black_enable"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text=""
        android:id="@+id/stop"
        android:textColor="#fff"
        android:onClick="stopAudio"
        />

</LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/video_text"
    android:text=" VIDEO"
    android:textColor="#fff"
    android:textSize="25dp"
    android:layout_below="@id/linear_layout_one"
    android:layout_marginTop="30dp"
    android:background="@drawable/background_card_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear_layout_three"
        android:layout_below="@+id/video_text"
        android:background="@drawable/background_card_footer"
        android:gravity="center">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text=""
            android:id="@+id/start_video"
            android:onClick="playVideo"
            android:background="@drawable/button_red_enable"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <Button
            android:background="@drawable/button_black_enable"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/stop_video"
            android:text=""
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:onClick="stopVideo"/>

    </LinearLayout>

    <SurfaceView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/surface_view"
        android:layout_below="@+id/linear_layout_three"/>

</RelativeLayout>
</ScrollView>